{
  "extends": ["eslint:recommended"],
  "env": {
    "node": false,
    "browser": true,
    "amd": true,
    "es6": true
  },
  "plugins": ["compat"],
  "rules": {
    "compat/compat": "error",
    "complexity": "off",
    "max-statements": "off",
    "no-cond-assign": "off",
    "no-console": "off",
    "no-constant-condition": "off",
    "no-control-regex": "off",
    "no-empty": "off",
    "no-extra-semi": "off",
    "no-fallthrough": "off",
    "no-func-assign": "off",
    "no-invalid-this": "off",
    "no-redeclare": "off",
    "no-sparse-arrays": "off",
    "no-undef": "off",
    "no-unused-vars": "off",
    "no-useless-escape": "off"
  },
  "settings": {
    "polyfills": [
      "Map",
      "Map.prototype",
      "Math.sign",
      "Promise",
      "Reflect",
      "Symbol",
      "Symbol.iterator",
      "Symbol.prototype",
      "Symbol.toPrimitive",
      "Symbol.toStringTag",
      "Uint32Array",
      "window.crypto"
    ]
  }
}
