{
  "extends": ["eslint:recommended", "plugin:node/recommended"],
  "env": { "browser": true" },
  "plugins": ["compat"],
  "rules": {
    "compat/compat": "error",
    "no-unsafe-finally": "warn",
    "no-cond-assign": "warn",
    "no-console": "warn",
    "no-control-regex": "warn",
    "no-empty": "warn",
    "no-extra-semi": "warn",
    "no-func-assign": "warn",
    "no-undef": "warn",
    "no-unused-vars": "warn",
    "no-useless-escape": "warn",
    "max-statements": [ "off" ],
    "complexity": [ "off" ],
    "no-constant-condition": "warn",
    "no-fallthrough": "warn",
    "no-sparse-arrays": "warn",
    "node/no-deprecated-api": "warn"
  },
  "settings": { "polyfills": [ "promises" ] }
}
